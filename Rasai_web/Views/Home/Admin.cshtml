@{
    ViewData["Title"] = "Admin Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/Admin.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
        font-size: 16px;
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: black;
        padding: 0.5rem 5rem;
        /*Added padding to the navbar */
    }

        .navbar a {
            color: white;
            text-decoration: none;
            font-size: 1.2rem;
            transition: text-decoration 0.3s ease;
        }

            .navbar a:hover {
                background-color: white;
                color: black;
            }

    .navLinks {
        display: flex;
        justify-content: space-between;
    }

        .navLinks a {
            padding: 0 5rem;
        }

    .logo img {
        height: 3.2em;
    }

    .footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: black;
    }

    .footer-links {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
    }

    .footer-contacts {
        padding: 0 5em;
    }

    .footer a,
    .footer p {
        text-decoration: none;
        font-family: 'Franklin Gothic Medium', sans-serif;
        font-size: 20px;
        color: white;
        margin: 0 2em;
    }
</style>


<div class="navbar">
    <div class="logo-box">
        <a asp-controller="Home" asp-action="Index" class="logo">
            <img src="/lib/Logo.png" alt="Go to home page">
        </a>
    </div>
    <div class="navLinks">
        <a asp-controller="Home" asp-action="About">About</a>
        <a asp-controller="MenuItems" asp-action="Index">Menu</a>
        <a asp-controller="Home" asp-action="Booking">Booking</a>
        <a asp-controller="Home" asp-action="Index">Login</a>

    </div>
</div>

<body>
    <div class="admin-container">
        <nav class="sidebar">
            <ul>
                <li><a asp-controller="Home" asp-action="Admin">Admin</a></li>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Home" asp-action="CreateEditMenu">Create Menu Item</a></li>
                <li><a asp-controller="Home" asp-action="Menu">Menu</a></li>
            </ul>
        </nav>
        <main class="main-content">
            <div class="admin-heading">
                <h1>Dashboard</h1>
                <div class="createMenuButton">
                    <a asp-controller="Home" asp-action="CreateEditMenu" class="btn btn-primary">Create Item</a>
                </div>
            </div>
            <div class="bookings">
                <!-- Bookings will be displayed here -->
                @* Add your booking display logic here *@
            </div>
        </main>
    </div>

    <footer>
        <div class="footer">
            <div class="footer-links">
                <ul>
                    <a asp-controller="Home" asp-action="About">About</a>
                    <a asp-controller="Home" asp-action="Menu">Menu</a>
                    <a asp-controller="Home" asp-action="Booking">Booking</a>
                </ul>
            </div>
            <div class="footer-contacts" id="contacts">
                <ul>
                    <li><a>Contacts</a></li>
                    <li><p><b>info@rasai.co.nz</b></p></li>
                    <li><p><b>0210 452 333</b></p></li>
                </ul>
            </div>
        </div>
    </footer>


    
</body>
</html>