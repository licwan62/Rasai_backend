@model Rasai_web.Models.MenuItem

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
        font-size: 16px;
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: black;
        padding: 0.5rem 5rem;
        /*Added padding to the navbar */
    }

        .navbar a {
            color: white;
            text-decoration: none;
            font-size: 1.2rem;
            transition: text-decoration 0.3s ease;
        }

            .navbar a:hover {
                background-color: white;
                color: black;
            }

    .navLinks {
        display: flex;
        justify-content: space-between;
    }

        .navLinks a {
            padding: 0 5rem;
        }

    .logo img {
        height: 3.2em;
    }

    .footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: black;
    }

    .footer-links {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
    }

    .footer-contacts {
        padding: 0 5em;
    }

    .footer a,
    .footer p {
        text-decoration: none;
        font-family: 'Franklin Gothic Medium', sans-serif;
        font-size: 20px;
        color: white;
        margin: 0 2em;
    }

    /* Center the delete body vertically and horizontally */
    .deleteBody {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        
    }
    /* Style the form content */
    .formContent {
        max-width: 600px; /* Adjust the maximum width of the form content */
        padding: 20px; /* Add padding to the form content */
        box-sizing: border-box; /* Include padding in the width calculation */
        text-align: center; /* Center align the form content */
        margin-right: 1rem;
        margin-bottom: 20rem;
    }


    /* Style the definition list */
    dl.row {
        margin-bottom: 20px; /* Add some space below the definition list */
    }

    /* Style the definition term (dt) */
    dt {
        font-weight: bold; /* Make the term bold */
        margin-top: 0.5rem;
    }

    /* Style the definition description (dd) */
    dd {
        margin-left: 0;
        margin-top: 0.5rem;
    }

    /* Style the submit button */
    .delButton {
        text-align: center; /* Center button and link */
        margin-right: 25rem;
        margin-bottom: 20rem;
    }

    /* Style the 'Delete' button */
    .btn-danger {
        padding: 10px 20px; /* Add padding to the button */
        font-size: 16px; /* Adjust the font size as needed */
        background-color: #dc3545; /* Set the background color */
        color: #fff; /* Set the text color */
        border: none; /* Remove the border */
        border-radius: 4px; /* Add border radius */
        cursor: pointer; /* Add cursor pointer */
    }

    /* Style the 'Back to List' link */
    a {
        color: #007bff; /* Set the link color */
        text-decoration: none; /* Remove the underline */
        margin-left: 10px; /* Add some space to the left of the link */
    }
    

 

</style>
<div class="navbar">
    <div class="logo-box">
        <a asp-controller="Home" asp-action="Index" class="logo">
            <img src="/lib/Logo.png" alt="Go to home page">
        </a>
    </div>
    <div class="navLinks">
        <a asp-controller="Home" asp-action="About">About</a>
        <a asp-controller="MenuItems" asp-action="Index">Menu</a>
        <a asp-controller="Home" asp-action="Booking">Booking</a>
        <a asp-controller="Home" asp-action="Admin">Login</a>

    </div>
</div>

<h1 style="text-align: center;">Delete menu item</h1>

<h3 style="text-align: center;">Are you sure you want to delete this?</h3>
<div class="deleteBody">
    <hr />
    <div class="formContent">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>
        </dl>
    </div>
    <div class="delButton">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Menu_Items">Back to List</a>
        </form>
    </div>
</div>

<footer>
    <div class="footer">
        <div class="footer-links">
            <ul>
                <a asp-controller="Home" asp-action="About">About</a>
                <a asp-controller="Home" asp-action="Menu">Menu</a>
                <a asp-controller="Home" asp-action="Booking">Booking</a>
            </ul>
        </div>
        <div class="footer-contacts" id="contacts">
            <ul>
                <li><a>Contacts</a></li>
                <li><p><b>info@rasai.co.nz</b></p></li>
                <li><p><b>0210 452 333</b></p></li>
            </ul>
        </div>
    </div>
</footer>

