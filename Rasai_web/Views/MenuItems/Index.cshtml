@model IEnumerable<Rasai_web.Models.MenuItem>

@{
    ViewBag.Title = "Menu";
}


<div class="navbar">
    <div class="logo-box">
        <a asp-controller="Home" asp-action="Index" class="logo">
            <img src="/lib/Logo.png" alt="Go to home page">
        </a>
    </div>
    <div class="navLinks">
        <a asp-controller="Home" asp-action="About">About</a>
        <a asp-controller="Home" asp-action="Menu">Menu</a>
        <a asp-controller="Home" asp-action="Booking">Booking</a>
        <a asp-controller="Home" asp-action="Admin">Login</a>

    </div>
</div>
<h2>Menu</h2>

<div class="menu-items">
    @foreach (var item in Model)
    {
        <div class="menu-item">
            <h3>@item.Name</h3>
            <p>@item.Description</p>
            <p>Price: $@item.Price</p>
            <img src="@item.ImageUrl" alt="@item.Name" class="menu-item-image" />
        </div>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    }
</div>

<footer>
    <div class="footer">
        <div class="footer-links">
            <ul>
                <a asp-controller="Home" asp-action="About">About</a>
                <a asp-controller="Home" asp-action="Menu">Menu</a>
                <a asp-controller="Home" asp-action="Booking">Booking</a>
            </ul>
        </div>
        <div class="footer-contacts" id="contacts">
            <ul>
                <li><a>Contacts</a></li>
                <li><p><b>info@rasai.co.nz</b></p></li>
                <li><p><b>0210 452 333</b></p></li>
            </ul>
        </div>
    </div>
</footer>


<style>

    html, body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        height: 100%;
        width: 100%;
        background-color: #f2f2f2;
        font-size: 16px;
    }
    .menu-items {
        display: flex;
        flex-wrap: wrap;
    }

    .menu-item {
        margin: 20px;
        padding: 20px;
        border: 1px solid #ccc;
        width: 250px;
    }

    .menu-item-image {
        max-width: 100%;
        height: auto;
    }
    a{
        margin: 5px;
    }


    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: black;
        padding: 0.35em 5em;
        width: 100%;
        /*Added padding to the navbar */
    }

        .navbar a {
            color: white;
            text-decoration: none;
            font-size: 1.2rem;
            transition: text-decoration 0.3s ease;
        }

            .navbar a:hover {
                background-color: white;
                color: black;
            }

    .navLinks {
        display: flex;
        justify-content: space-between;
        padding-right: 2em;
    }

        .navLinks a {
            padding: 0 5rem;
        }

    .logo img {
        height: 3.2em;
    }

    .footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: black;
        margin: 0;
        padding: 0;
        width: 100%;
    }

    .footer-links {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
    }

    .footer-contacts {
        padding: 0 5em;
    }

    .footer a,
    .footer p {
        text-decoration: none;
        font-family: 'Franklin Gothic Medium', sans-serif;
        font-size: 20px;
        color: white;
        margin: 0 2em;
    }
</style>
