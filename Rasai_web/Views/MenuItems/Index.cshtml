@model IEnumerable<Rasai_web.Models.MenuItem>

@{
    ViewData["Title"] = "Menu Items";
}
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
        font-size: 16px;
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: black;
        padding: 0.5rem 5rem;
        /*Added padding to the navbar */
    }

        .navbar a {
            color: white;
            text-decoration: none;
            font-size: 1.2rem;
            transition: text-decoration 0.3s ease;
        }

            .navbar a:hover {
                background-color: white;
                color: black;
            }

    .navLinks {
        display: flex;
        justify-content: space-between;
    }

        .navLinks a {
            padding: 0 5rem;
        }

    .logo img {
        height: 3.2em;
    }

    .footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: black;
    }

    .footer-links {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
    }

    .footer-contacts {
        padding: 0 5em;
    }

    .footer a,
    .footer p {
        text-decoration: none;
        font-family: 'Franklin Gothic Medium', sans-serif;
        font-size: 20px;
        color: white;
        margin: 0 2em;
    }
    .listBody{
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        width: 100%;

    }

    .table {
        
        margin: auto;
        margin-top: 0;
        width: 80%; /* Adjust the width of the table as needed */
        border-collapse: collapse; /* Collapse borders between table cells */
    }

        .table th, .table td {
            padding: 8px; /* Add padding to table cells */
            text-align: left; /* Align text inside table cells */
            border: 1px solid #dddddd; /* Add border to table cells */
        }

        .table th {
            background-color: #f2f2f2; /* Add background color to table header cells */
            font-weight: bold; /* Make table header text bold */
        }

        .table td {
            vertical-align: middle; /* Align table cell content vertically in the middle */
        }

</style>
<div class="navbar">
    <div class="logo-box">
        <a asp-controller="Home" asp-action="Index" class="logo">
            <img src="/lib/Logo.png" alt="Go to home page">
        </a>
    </div>
    <div class="navLinks">
        <a asp-controller="Home" asp-action="About">About</a>
        <a asp-controller="MenuItems" asp-action="Index">Menu</a>
        <a asp-controller="Home" asp-action="Booking">Booking</a>
        <a asp-controller="Home" asp-action="Booking">Booking</a>

    </div>
</div>
<div class="Heading">
    <h1 style="text-align: center;">Menu_Items</h1>
</div>
<p style="text-align: center;">
    <a asp-action="Create" asp-controller="MenuItems">Create New</a>
</p>


<div class="listBody">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

<footer>
    <div class="footer">
        <div class="footer-links">
            <ul>
                <a asp-controller="Home" asp-action="About">About</a>
                <a asp-controller="Home" asp-action="Menu">Menu</a>
                <a asp-controller="Home" asp-action="Booking">Booking</a>
            </ul>
        </div>
        <div class="footer-contacts" id="contacts">
            <ul>
                <li><a>Contacts</a></li>
                <li><p><b>info@rasai.co.nz</b></p></li>
                <li><p><b>0210 452 333</b></p></li>
            </ul>
        </div>
    </div>
</footer>
